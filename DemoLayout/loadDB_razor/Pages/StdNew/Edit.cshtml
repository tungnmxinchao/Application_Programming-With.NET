            <div class="form-group">
                <label asp-for="Student.DepartId" class="control-label">Department</label>
                <div>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.DepartId)
                    {
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="Student.DepartId" value="@item.Value" /> @item.Text
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Student.DepartId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Student.Dob" class="control-label"></label>
                <input asp-for="Student.Dob" type="date" class="form-control" />
